{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "examples", "dist", "./src/**/*.test.ts"]
}
